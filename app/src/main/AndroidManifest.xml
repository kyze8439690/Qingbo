<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.yugy.qingbo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".Application"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true">

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity"
                  android:label="@string/login_title"/>
        <activity android:name=".activity.BlackMagicLoginActivity"
                  android:label="@string/login_title"/>
        <activity android:name=".activity.TimelineActivity"/>
        <activity android:name=".activity.PicActivity"
                  android:theme="@style/AppTheme.PicActivity"/>
        <activity android:name=".activity.DetailActivity"
                  android:label=""
                  android:theme="@style/AppTheme.DetailActivity"
                  android:parentActivityName=".activity.MainActivity"
                  android:windowSoftInputMode="stateHidden"
                  />
        <activity android:name=".activity.NoStoreDetailActivity"
                  android:label=""
                  android:theme="@style/AppTheme.DetailActivity"
                  android:windowSoftInputMode="stateHidden"
                  />
        <activity android:name=".activity.UserActivity"
                  android:theme="@style/AppTheme.DetailActivity"
                  />
        <activity android:name=".activity.NewStatusActivity"
                  android:theme="@style/AppTheme.NewStatusActivity"
                  android:windowSoftInputMode="adjustResize"
                  />

        <provider
            android:authorities="me.yugy.qingbo.provider"
            android:name=".dao.DataProvider"
            android:exported="false" >
            <grant-uri-permission android:pathPattern=".*"/>
        </provider>
    </application>
</manifest>
