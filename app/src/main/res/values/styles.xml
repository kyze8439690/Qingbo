<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.PicActivity" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.PicActivity</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:windowBackground">@color/pic_window_background</item>
    </style>

    <style name="AppTheme.DetailActivity" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_light</item>
        <item name="android:actionBarStyle">@style/ActionBar.DetailActivity</item>
        <item name="android:windowBackground">@color/detail_window_background</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:indeterminateProgressStyle">@style/ActionBar.Progress</item>
    </style>

    <style name="ActionBar.Progress" parent="android:Widget.Holo.ProgressBar">
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="ActionBar.PicActivity" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="ActionBar.DetailActivity" parent="ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff737373</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TopicButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/bg_topic</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundHeadIconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/default_head</item>
    </style>

</resources>
