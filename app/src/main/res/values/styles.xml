<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.TimelineActivity" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.UserActivity" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/detail_window_background</item>
    </style>

    <style name="AppTheme.PicActivity" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.PicActivity</item>
        <item name="android:windowBackground">@color/pic_window_background</item>
    </style>

    <style name="AppTheme.DetailActivity" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.DetailActivity</item>
        <item name="android:windowBackground">@color/detail_window_background</item>
    </style>

    <style name="AppTheme.NewStatusActivity" parent="android:Theme.Holo.Light.Dialog.NoActionBar">

    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:indeterminateProgressStyle">@style/ActionBar.Progress</item>
        <item name="android:background">#32b67a</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="ActionBar.Progress" parent="android:Widget.Holo.ProgressBar">
        <item name="android:minWidth">56dp</item>
        <item name="android:maxWidth">56dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="ActionBar.PicActivity" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="ActionBar.DetailActivity" parent="ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff737373</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundHeadIconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/default_head</item>
    </style>

    <style name="TimelineLocationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">I am here...</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff427fed</item>
        <item name="android:background">@drawable/list_selector_holo</item>
        <item name="android:drawableLeft">@drawable/ic_location_red_12</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
