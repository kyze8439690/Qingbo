<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <me.yugy.qingbo.view.image.CoverImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="#ffb3c5cf"
        />
    
    <LinearLayout
        android:id="@+id/informations_container"
        android:orientation="vertical"
        android:layout_below="@id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:background="#FFF"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textStyle="bold"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textColor="#909090"
            android:text="description"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textColor="#909090"
            android:text="location"
            />

        <Button
            android:id="@+id/follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_30_blue"
            android:textColor="#FFF"
            android:layout_marginTop="16dp"
            android:text="Following"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="37.5dp"
            android:paddingRight="37.5dp"
            />

        <TextView
            android:id="@+id/follower_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:textColor="#909090"
            android:text="123 followers"
            />

    </LinearLayout>

    <me.yugy.qingbo.view.image.HeadIconImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/informations_container"
        android:src="@drawable/default_head"
        app:corner_radius="120dp"
        android:layout_marginBottom="-16dp" />
    
</RelativeLayout>