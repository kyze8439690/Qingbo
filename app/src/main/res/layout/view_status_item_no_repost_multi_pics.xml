<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="0dp"
                android:paddingTop="14dp"
                android:paddingLeft="14dp"
                android:paddingBottom="14dp"
                android:background="@drawable/bg_card_white"
                android:descendantFocusability="blocksDescendants"
    >

    <me.yugy.qingbo.view.image.HeadIconImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head"
        app:corner_radius="50dp"
        style="@style/RoundHeadIconStyle"
        />

    <me.yugy.qingbo.view.text.LinkTextView
        android:id="@+id/status_listitem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:text="text"
        />

    <TextView
        android:id="@+id/status_listitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toRightOf="@id/head"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="name"
        />

    <me.yugy.qingbo.view.NoScrollGridView
        android:id="@+id/status_listitem_picgrid"
        android:layout_height="wrap_content"
        android:layout_width="246dp"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:numColumns="3"
        android:drawSelectorOnTop="true"
        android:overScrollMode="never"
        android:listSelector="@drawable/list_selector_holo"
        android:layout_below="@id/status_listitem_text"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/status_listitem_location"
        style="@style/TimelineLocationText"
        android:layout_below="@id/status_listitem_picgrid"
        />

</RelativeLayout>