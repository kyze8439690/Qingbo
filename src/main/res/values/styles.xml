<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <!-- TextAppearance of the header view's title text -->
        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Custom.PtrHeader.Title</item>

        <!-- Color to tint the progress bar -->
        <item name="ptrProgressBarColor">#666</item>

        <!-- Style of the Progress Bar. Values are either: inside or outside -->
        <item name="ptrProgressBarStyle">inside</item>

        <!-- The strings to be displayed at the various states -->
        <item name="ptrPullText">向下滑动即可刷新</item>
        <item name="ptrRefreshingText">正在刷新...</item>
    </style>

    <style name="TextAppearance.Custom.PtrHeader.Title"
           parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DetailTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="actionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_solid_light_holo</item>
    </style>

</resources>
